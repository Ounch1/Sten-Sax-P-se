
///Hi! so im trying to create a rock paper scissors program in visual studio but for 
some reason program only responds when it picks rock, otherwise it just 
closes after player is ready with his choice. What am i doing wrong? Please help 

///Also sorry that it is in Swedish, Sten is rock, Sax is Scissors and Påse is paper. 
Vann means won, Spelare means Player, Dator is Computer and Väljer is Chooses

using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace StenSaxPåse
{
    class Program
    {
        static void Main(string[] args)
        {
            ///Spelare Val
            Console.WriteLine("Välj Sten Sax eller Pose");
            string SV = Console.ReadLine();
            ///Dator Val
            Random r = new Random();
            int DV = r.Next(4);
            
            ///Spelet
            if (DV == 1)
            {
                if (SV == "Sten")
                {
                    Console.WriteLine("Dator väljer sten");
                    Console.WriteLine("Ingen Vann");
                }
                else if (SV == "Sax")
                {
                    Console.WriteLine("Dator väljer sten");
                    Console.WriteLine("Dator Vann");

                }
               else if (SV == "Påse")
                {
                    Console.WriteLine("Dator väljer sten");
                    Console.WriteLine("Spelare vann");
                }
                if (DV == 2)
                {
                    if (SV == "Sten")
                    {
                        Console.WriteLine("Dator väljer Sax");
                        Console.WriteLine("Spelare vann");

                    }
                    else if (SV == "Sax")
                    {
                        Console.WriteLine("Dator väljer Sax");
                        Console.WriteLine("Ingen Vann");

                    }
                    else if (SV == "Påse")
                    {
                        Console.WriteLine("Dator väljer Sax");
                        Console.WriteLine("Dator Vann");
                    }
                  
                }
                else if (DV == 3)
                {
                    if (SV == "Sten")
                    {
                        Console.WriteLine("Dator väljer påse");
                        Console.WriteLine("Dator Vann");

                    }
                    else if (SV == "Sax")
                    {
                        Console.WriteLine("Dator väljer påse");
                        Console.WriteLine("Spelare Vann");

                    }
                    else if (SV == "Påse")
                    {
                        Console.WriteLine("Dator väljer påse");
                        Console.WriteLine("Ingen Vann");

                    }

                }
                else
                {
                    Console.WriteLine("Du måste välja Sten Sax eller Påse!");

                }

            }
            Console.ReadLine();
            }
        }
    }

    

    
